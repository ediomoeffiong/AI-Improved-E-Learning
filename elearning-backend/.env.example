# Example environment variables
# Copy this file to .env and fill in your values

# Database Configuration
# For development (localhost)
MONGODB_URI=mongodb://localhost:27017/elearning
# For production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=AppName

# JWT Secret (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-here

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# CORS Origin (comma-separated list for multiple origins)
# For development
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
# For production
# CORS_ORIGIN=https://ai-improved-e-learning.vercel.app
